{
  "name": "VideoExplanation",
  "type": "object",
  "properties": {
    "topic": {
      "type": "string",
      "description": "The topic to explain"
    },
    "category": {
      "type": "string",
      "enum": [
        "science",
        "technology",
        "history",
        "business",
        "education",
        "health",
        "arts",
        "other"
      ],
      "default": "other"
    },
    "script": {
      "type": "string",
      "description": "Generated explanation script"
    },
    "duration_estimate": {
      "type": "number",
      "description": "Estimated duration in seconds"
    },
    "complexity_level": {
      "type": "string",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ],
      "default": "beginner"
    },
    "key_points": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Main points covered"
    },
    "image_urls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Generated images for each key point"
    },
    "view_count": {
      "type": "number",
      "default": 0
    }
  },
  "required": [
    "topic",
    "script"
  ],
  "rls": {
    "read": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "email": "admin"
          }
        }
      ]
    },
    "write": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}